@{
    ViewBag.Title = "Contact";
}
<title>İletişim</title>
<div class="container">
    <!-- Content Row -->
    <div class="row">
        <!-- Map Column -->
        <div class="col-lg-8 mb-4">
            <!-- Embedded Google Map -->
           <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.8902697097947!2d30.32343831529358!3d40.74243997932867!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ccaded70ee240b%3A0xd81085b5551312fd!2sBilgisayar+Ve+Bili%C5%9Fim+Bilimleri+Fak%C3%BCltesi!5e0!3m2!1str!2str!4v1551870176857" width="100%" height="400" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
        <!-- Contact Details Column -->
        <div class="col-lg-4 mb-4">
            <h3 style="color:#000033">İletişim</h3>
            <p>
                Sakarya Üniversitesi Bilgisayar ve Bilişim Bilimleri Fakültesi
                <br>54187 Sakarya
                <br>
            </p>
            <p>
                Telefon: (0264) 295 69 79
            </p>
            <p>              
                E mail: bf@sakarya.edu.tr              
            </p>
        </div>
    </div>
    <!-- /.row -->
    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <div class="row">
        <div class="col-lg-8 mb-4">
            <h3 style="color:#000033">Bize Ulaşın</h3>
            <form name="sentMessage" id="contactForm" novalidate>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Ad Soyad:</label>
                        <input type="text" class="form-control" id="name" required data-validation-required-message="Lütfen adınızı giriniz.">
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Telefon :</label>
                        <input type="tel" class="form-control" id="phone" required data-validation-required-message="Lütfen telefon numaranızı giriniz.">
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Email Adres :</label>
                        <input type="email" class="form-control" id="email" required data-validation-required-message="Lütfen email adresinizi giriniz.">
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Mesaj:</label>
                        <textarea rows="10" cols="100" class="form-control" id="message" required data-validation-required-message="Lütfen mesajınızı giriniz." maxlength="999" style="resize:none"></textarea>
                    </div>
                </div>
                <div id="success"></div>
                <!-- For success/fail messages -->
                <button type="submit" class="btn btn-primary" id="sendMessageButton" style="background-color:#000033;border-color:#000033;">Mesaj Gönder</button>
            </form>
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->